{
  "tasks": {
    "test": "deno test -A --doc --parallel"
  },
  "fmt": {
    "include": [
      "denops/**/*.ts"
    ],
    "exclude": [
      "*.md",
      "*.jsonc",
      "*.lock",
      ".roo/"
    ],
    "indentWidth": 2,
    "lineWidth": 120,
    "proseWrap": "always",
    "singleQuote": false,
    "useTabs": false
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  }
}
